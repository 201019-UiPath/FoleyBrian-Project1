@model IEnumerable<ManagerUI.Models.Beer>

@{
    ViewData["Title"] = "Beers Page";
    Layout = "~/Views/Shared/_LoggedInLayout.cshtml";
}


<h1>Order History</h1>

<p>
    <a asp-action="Add">Add Beer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ABV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IBU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Keg)
            </th>
            <th>
            @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ABV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IBU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Keg)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
        }
    </tbody>
</table>
